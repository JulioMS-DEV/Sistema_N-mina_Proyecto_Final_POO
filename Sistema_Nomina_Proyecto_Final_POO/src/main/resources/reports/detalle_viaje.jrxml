<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="detalle_viaje" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="DataAdapter.jrdax"/>

    <parameter name="ID_VIAJE" class="java.lang.Long"/>
    <parameter name="TXT_DESTINO" class="java.lang.String"/>
    <parameter name="TXT_FECHA" class="java.lang.String"/>
    <parameter name="TXT_CHOFER" class="java.lang.String"/>
    <parameter name="TXT_MONTO_CHOFER" class="java.lang.String"/>
    <parameter name="TXT_GRAN_TOTAL" class="java.lang.String"/>

    <queryString language="sql">
        <![CDATA[
        SELECT e.nombres, e.apellidos, pa.monto
        FROM participacion_ayudante pa
        INNER JOIN Empleado e ON pa.empleado_id = e.id
        WHERE pa.viaje_id = $P{ID_VIAJE}
        ]]>
    </queryString>

    <field name="nombres" class="java.lang.String"/>
    <field name="apellidos" class="java.lang.String"/>
    <field name="monto" class="java.math.BigDecimal"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="200" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="35"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="24" isBold="true"/>
                </textElement>
                <text><![CDATA[FERRETERÍA KATHERINE]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="35" width="555" height="25"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE VIAJE]]></text>
            </staticText>

            <line>
                <reportElement x="50" y="65" width="455" height="1"/>
            </line>

            <textField>
                <reportElement x="305" y="70" width="250" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado el: " + new java.text.SimpleDateFormat("dd/MM/yyyy h:mm a", new java.util.Locale("es", "ES")).format(new java.util.Date())]]></textFieldExpression>
            </textField>

            <rectangle>
                <reportElement mode="Transparent" x="0" y="95" width="555" height="100"/>
            </rectangle>

            <staticText><reportElement x="10" y="105" width="80" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Destino:]]></text></staticText>
            <textField><reportElement x="90" y="105" width="200" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$P{TXT_DESTINO}]]></textFieldExpression></textField>

            <staticText><reportElement x="300" y="105" width="80" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Fecha:]]></text></staticText>
            <textField><reportElement x="380" y="105" width="150" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$P{TXT_FECHA}]]></textFieldExpression></textField>

            <staticText><reportElement x="10" y="135" width="80" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Chofer:]]></text></staticText>
            <textField><reportElement x="90" y="135" width="200" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$P{TXT_CHOFER}]]></textFieldExpression></textField>

            <staticText><reportElement x="300" y="135" width="80" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Pago Chofer:]]></text></staticText>
            <textField><reportElement x="380" y="135" width="150" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$P{TXT_MONTO_CHOFER}]]></textFieldExpression></textField>

            <staticText><reportElement x="300" y="165" width="80" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[TOTAL VIAJE:]]></text></staticText>
            <textField><reportElement x="380" y="165" width="150" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><textFieldExpression><![CDATA[$P{TXT_GRAN_TOTAL}]]></textFieldExpression></textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="555" height="30" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[LISTA DE AYUDANTES]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="30" splitType="Stretch">
            <textField>
                <reportElement x="10" y="0" width="300" height="30"/>
                <textElement verticalAlignment="Middle"><font fontName="Times New Roman"/></textElement>
                <textFieldExpression><![CDATA[$F{nombres} + " " + $F{apellidos}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="310" y="0" width="200" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"><font fontName="Times New Roman"/></textElement>
                <textFieldExpression><![CDATA[$F{monto}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="515" y="0" width="30" height="30"/>
                <textElement verticalAlignment="Middle"><font fontName="Times New Roman"/></textElement>
                <text><![CDATA[C$]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="29" width="555" height="1" forecolor="#DDDDDD"/>
            </line>
        </band>
    </detail>

    <pageFooter>
        <band height="40" splitType="Stretch">
            <textField>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="40">
            <printWhenExpression><![CDATA[$V{REPORT_COUNT} == 0]]></printWhenExpression>
            <staticText>
                <reportElement x="0" y="10" width="555" height="30" forecolor="#666666"/>
                <textElement textAlignment="Center"><font fontName="Times New Roman" isItalic="true"/></textElement>
                <text><![CDATA[Este viaje no lleva ayudantes registrados.]]></text>
            </staticText>
        </band>
    </summary>
</jasperReport>