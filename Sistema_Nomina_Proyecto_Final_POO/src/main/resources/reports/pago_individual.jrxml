<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="pago_individual" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="DataAdapter.jrdax"/>

    <parameter name="ID_PAGO" class="java.lang.Long"/>
    <parameter name="MONTO_FORMATO_TEXTO" class="java.lang.String"/>

    <queryString language="sql">
        <![CDATA[
        SELECT p.fechapago, p.fechageneracion, e.nombres, e.apellidos, e.cedula, e.direccion
        FROM Pago p
        INNER JOIN Empleado e ON p.empleado_id = e.id
        WHERE p.id = $P{ID_PAGO}
        ]]>
    </queryString>

    <field name="fechapago" class="java.sql.Date"/>
    <field name="fechageneracion" class="java.sql.Date"/>
    <field name="nombres" class="java.lang.String"/>
    <field name="apellidos" class="java.lang.String"/>
    <field name="cedula" class="java.lang.String"/>
    <field name="direccion" class="java.lang.String"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="100" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="24" isBold="true"/>
                </textElement>
                <text><![CDATA[FERRETERÍA KATHERINE]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="30" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[COMPROBANTE DE PAGO]]></text>
            </staticText>

            <line>
                <reportElement x="50" y="65" width="455" height="1"/>
            </line>

            <textField>
                <reportElement x="305" y="70" width="250" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado el: " + new java.text.SimpleDateFormat("dd/MM/yyyy h:mm a", new java.util.Locale("es", "ES")).format($F{fechageneracion})]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="200" splitType="Stretch">

            <staticText><reportElement x="0" y="10" width="100" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Empleado:]]></text></staticText>
            <textField><reportElement x="130" y="10" width="300" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$F{nombres} + " " + $F{apellidos}]]></textFieldExpression></textField>

            <staticText><reportElement x="0" y="40" width="100" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Cédula:]]></text></staticText>
            <textField><reportElement x="130" y="40" width="300" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$F{cedula}]]></textFieldExpression></textField>

            <staticText><reportElement x="0" y="70" width="100" height="20"/><textElement><font fontName="Times New Roman" isBold="true"/></textElement><text><![CDATA[Fecha de Pago:]]></text></staticText>
            <textField pattern="dd/MM/yyyy"><reportElement x="130" y="70" width="300" height="20"/><textElement><font fontName="Times New Roman"/></textElement><textFieldExpression><![CDATA[$F{fechapago}]]></textFieldExpression></textField>

            <staticText>
                <reportElement mode="Opaque" x="0" y="120" width="250" height="40" backcolor="#E0E0E0"/>
                <box leftPadding="10"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[MONTO TOTAL A PAGAR:]]></text>
            </staticText>

            <textField isBlankWhenNull="true">
                <reportElement mode="Opaque" x="250" y="120" width="305" height="40" backcolor="#E0E0E0"/>
                <box rightPadding="10"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{MONTO_FORMATO_TEXTO}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <pageFooter>
        <band height="40" splitType="Stretch">
            <textField>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>