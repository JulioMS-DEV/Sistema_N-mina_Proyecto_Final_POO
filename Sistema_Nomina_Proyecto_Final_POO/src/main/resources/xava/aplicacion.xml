<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE aplicacion SYSTEM "dtds/aplicacion.dtd">

<aplicacion nombre="Sistema_Nomina_Proyecto_Final_POO"> 
	
	<!--
	Un módulo por defecto se asume para cada
	controlador en <modulo-defecto/> 
	-->
	<modulo-defecto>		  
		<controlador nombre="Typical"/>		
	</modulo-defecto>
	
	<!--
	Podemos definir módulos adicionales, por ejemplo: 	
	<modulo nombre="ProfesorSoloLectura">
		<modelo nombre="Profesor"/>
		<controlador nombre="Print"/>
	</modulo>		
	-->
    <modulo nombre="Empleado">
        <modelo nombre="Empleado"/>
        <controlador nombre="Typical"/>
        <controlador nombre="ReportesEmpleado"/>
    </modulo>

    <modulo nombre="Pago">
        <modelo nombre="Pago"/>
        <controlador nombre="Typical"/>
        <controlador nombre="ReportesPago"/>
    </modulo>

    <modulo nombre="Viaje">
        <modelo nombre="Viaje"/>
        <controlador nombre="Typical"/>
        <controlador nombre="ReportesViaje"/>
    </modulo>
		
</aplicacion>

